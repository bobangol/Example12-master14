<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <!-- Declares a button that starts 2nd activity -->
    <Button
        android:id="@+id/btn_start_second_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnStartThirdActivityClicked"
        android:text="@string/start_third_activity" />

    <!-- Declares a button that opens a browser -->
    <Button
        android:id="@+id/btn_start_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnStartCamera"
        android:drawableLeft="@drawable/ic_camera"
        android:text="@string/start_camera" />


</LinearLayout>

